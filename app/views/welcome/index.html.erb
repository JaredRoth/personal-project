<div class="parallax-container">
  <div class="parallax"><%= image_tag("carlsbad") %></div>
</div>
<div class="section white">
  <div class="row container">
    <h2 class="header">Upcoming Events</h2>
    <p class="grey-text text-darken-3 lighten-3">
      <ul>
        <p><%= "Our #{Date.today.year} schedule:" unless @this_year.empty?%></p>
        <%= @this_year.each do |event| %>
          <li> <%= "#{event.name}: #{event.date}" %> </li>
        <% end %>
      </ul>
      <ul>
        <p><%= "Our #{Date.today.next_year.year} schedule:" unless @next_year.empty?%></p>
        <%= @next_year.each do |event| %>
          <li> <%= "#{event.name}: #{event.date}" %> </li>
        <% end %>
      </ul>
    </p>
  </div>
</div>
